@using Encryptics.WebPortal.Areas.Company.Models
@model DLPRuleModel
@using (Html.BeginForm("CreateNewUserRule", "PolicyBasedProtection", new { entityId = ViewBag.CompanyId }, FormMethod.Post, new { id = "NewRuleForm" }))
{
    <fieldset>
        <legend></legend>
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.RuleId)
        @Html.HiddenFor(m => m.EntityRuleId)
        @Html.HiddenFor(m => m.RuleTypeId)
        @Html.Hidden("PolicyId", Convert.ToInt32(Model.PolicyId))
        @Html.HiddenFor(m => m.RegexTerm)
        @Html.EditorForModel()
    </fieldset>
}
