@using Encryptics.WebPortal.Areas.Company.Models
@model CompanyDetailsModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Add New Company";
}

<h2>@ViewBag.Title</h2>

@Html.ActionLink("Return to Company Listing", string.Empty)

<section class="white" style="position: relative;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name)
            <input type="submit" value="Create Entity" style="position: absolute; bottom: 20px; right: 10px" />
        </fieldset>
    }
</section>
