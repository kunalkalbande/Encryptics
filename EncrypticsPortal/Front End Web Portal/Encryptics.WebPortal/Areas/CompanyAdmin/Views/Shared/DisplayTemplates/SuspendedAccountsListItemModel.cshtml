@model Encryptics.WebPortal.Areas.UserAdmin.Models.ActiveAccountsListItemModel

@{
    string cssClasses = string.Format("accountType {0}", Model.HasLicense ? "Pro" : "Free");
}

<tr>
    <td class="selectColumn" style="text-align: center;">
      <input type="checkbox" class="selectedSuspendedAccount" data-id="@Model.Id" data-entity-id="@Model.EntityId">
    </td>
    <td class="userNameColumn">@Html.ActionLink(Html.DisplayFor(m => m.UserName).ToHtmlString(), "SuspendedAccount", "Admin", new { @area = "UserAccount", @entityId = Model.EntityId, @userId = Model.Id }, null)</td>
    <td class="firstNameColumn">@Html.DisplayFor(m => m.FirstName)</td>
    <td class="lastNameColumn">@Html.DisplayFor(m => m.LastName)</td>
    <td class="companyNameColumn">@Html.DisplayFor(m => m.CompanyName)</td>
    <td class="accountTypeColumn"><span class="@cssClasses" >@(Model.UserWebPortalRole == null ? (Model.HasLicense ? "Pro" : "Free") : Model.UserWebPortalRole.RoleName)</span>
        @if (Model.LicenseExpires <= DateTime.Now)
        {
            <span class="orangeText allCaps">&mdash; expired</span>
        }
    </td>
</tr>
